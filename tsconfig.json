{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest",
      "jquery"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "node_modules/vue-tsx-support/enable-check.d.ts",
    "src/components/DataVisualEditor/custom-component/VText/index.tsx",
    "src/components/DataVisualEditor/custom-component/VText/index.tsx",
    "src/components/DataVisualEditor/custom-component/ComponentBase/index.tsx",
    "src/components/DataVisualEditor/custom-component/ComponentBase/index.tsx",
    "src/components/DataVisualEditor/utils/domUtils.js",
    "src/components/DataVisualEditor/utils/domUtils.js"
  ],
  "exclude": [
    "node_modules"
  ]
}